<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.ws3dm.app.activity.BindShareActivity"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlHead"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#323232">

            <LinearLayout
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:onClick="@{handler.onClick}"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/img_return" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="第三方绑定"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>



        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/qq_img"
                android:layout_marginLeft="16dp"
                android:background="@drawable/qq_fridend_no"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="50dp"
                android:text="QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="50dp"
                android:text="          "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bind_qq"
                android:textSize="16sp"
                android:onClick="@{handler.onClick}"
                android:textColor="#333333"
                android:layout_marginLeft="50dp"
                android:text="点击绑定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/wx_img"
                android:layout_marginLeft="16dp"
                android:background="@drawable/wx_friend_no"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="50dp"
                android:text="微信"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="40dp"
                android:text="          "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bind_wx"
                android:textSize="16sp"
                android:onClick="@{handler.onClick}"
                android:textColor="#333333"
                android:layout_marginLeft="50dp"
                android:text="解除绑定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/wb_img"
                android:layout_marginLeft="16dp"
                android:background="@drawable/xl_fridend_no"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="50dp"
                android:text="微博"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginLeft="40dp"
                android:text="          "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bind_wb"
                android:onClick="@{handler.onClick}"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginLeft="50dp"
                android:text="解除绑定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


    </LinearLayout>
</layout>