<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <!--手游的评论头部-->
    <RelativeLayout
        android:id="@+id/rl_comment_score"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone">

        <com.ws3dm.app.view.CircleProgress
            android:id="@+id/view_process"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:valueTextSize="26sp"
            app:despTextSize="14sp"
            android:layout_marginLeft="@dimen/element_margin_45"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            app:roundProgressColor="@color/red_dark"
            app:valueTextColor="@color/red_dark"
            app:circleStrokeWidth="6dp"/>

        <TextView
            android:id="@+id/tv_good"
            android:layout_width="135dp"
            android:layout_height="@dimen/element_margin_35"
            android:background="@drawable/img_mg_good"
            android:layout_alignTop="@+id/view_process"
            android:layout_toRightOf="@+id/view_process"
            android:layout_toEndOf="@+id/view_process"
            android:text="10086"
            android:textColor="#fcac51"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/element_margin_7"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/tv_bad"
            android:layout_width="135dp"
            android:layout_height="@dimen/element_margin_35"
            android:background="@drawable/img_mg_bad"
            android:text="10086"
            android:textColor="#4cbeff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/element_margin_7"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/tv_good"
            android:layout_alignLeft="@+id/tv_good"
            android:layout_alignStart="@+id/tv_good"/>
    </RelativeLayout>
    
    <!--手游的周边头部-->
    <LinearLayout
        android:id="@+id/rl_comment_around"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包"
                android:textStyle="bold"
                android:padding="@dimen/element_margin_7"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/black_55"/>

            <TextView
                android:id="@+id/libao1"
                android:text="热血江湖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/element_margin_9"
                android:singleLine="true"
                android:textSize="@dimen/text_size_14"
                android:drawableLeft="@drawable/red_point"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/libao2"
                android:text="热血江湖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/element_margin_9"
                android:visibility="gone"
                android:textSize="@dimen/text_size_14"
                android:drawableLeft="@drawable/red_point"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/libao3"
                android:text="热血江湖"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/element_margin_9"
                android:singleLine="true"
                android:textSize="@dimen/text_size_14"
                android:drawableLeft="@drawable/red_point"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/libao4"
                android:text="热血江湖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/element_margin_9"
                android:textSize="@dimen/text_size_14"
                android:drawableLeft="@drawable/red_point"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/libao5"
                android:text="热血江湖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/element_margin_9"
                android:singleLine="true"
                android:textSize="@dimen/text_size_14"
                android:drawableLeft="@drawable/red_point"
                android:ellipsize="end"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/element_margin_5"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"
                android:textStyle="bold"
                android:padding="@dimen/element_margin_7"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/black_55"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tag1"
                    android:text="网游"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/element_margin_15"
                    android:layout_marginRight="@dimen/element_margin_15"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/green_text_light"
                    android:background="@drawable/bg_roundrect_fillgreen2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tag2"
                    android:text="网游"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/green_text_light"
                    android:background="@drawable/bg_roundrect_fillgreen2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tag3"
                    android:text="网游"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/element_margin_15"
                    android:layout_marginRight="@dimen/element_margin_15"
                    android:textSize="@dimen/text_size_14"
                    android:background="@drawable/bg_roundrect_fillgreen2"
                    android:textColor="@color/green_text_light"
                    android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_margin_9"
                android:layout_marginBottom="@dimen/element_margin_9"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tag4"
                    android:text="网游"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/element_margin_15"
                    android:layout_marginRight="@dimen/element_margin_15"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/green_text_light"
                    android:background="@drawable/bg_roundrect_fillgreen2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tag5"
                    android:text="网游"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/green_text_light"
                    android:background="@drawable/bg_roundrect_fillgreen2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tag6"
                    android:text="网游"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/element_margin_15"
                    android:layout_marginRight="@dimen/element_margin_15"
                    android:textSize="@dimen/text_size_14"
                    android:background="@drawable/bg_roundrect_fillgreen2"
                    android:textColor="@color/green_text_light"
                    android:ellipsize="end"/>

            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>