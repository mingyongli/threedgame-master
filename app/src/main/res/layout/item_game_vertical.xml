<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/element_margin_5"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="@dimen/element_margin_70"
        android:layout_height="@dimen/element_margin_70"
        android:scaleType="fitXY"
        android:src="@drawable/load_default"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="@dimen/element_margin_2"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:text="2017-05-06"
        android:layout_marginTop="@dimen/element_margin_5"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/bt_download"
        android:layout_width="@dimen/element_margin_50"
        android:layout_height="25dp"
        android:layout_margin="@dimen/element_margin_5"
        android:textColor="@color/white"
        android:background="@drawable/bg_roundrect_fillgreen"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"
        android:text="详情"/>
    
</LinearLayout>