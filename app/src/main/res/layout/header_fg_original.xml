<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:clipChildren="false"
              android:orientation="vertical">
    <!--最新原创-->
    <LinearLayout
        android:id="@+id/ll_last"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/img_red"
            android:gravity="center_vertical"
            android:text="最新原创"
            android:textColor="@color/black_2a"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_more_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/element_margin_15"
            android:background="@drawable/bg_rect_side_gray"
            android:gravity="center"
            android:text="  全部 +   "
            android:textColor="@color/grey"
            android:textSize="12sp"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_last"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="65dp"
        android:clipChildren="false"
        android:visibility="visible"
        />
    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white_e7"
        android:layout_marginTop="@dimen/element_margin_30"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/bg_date"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bg_date"/>

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/black_2a"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_18"
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_date"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_year"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black_2a"
            android:paddingRight="@dimen/element_margin_5"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_roundrect_fillred"
            android:gravity="center"
            android:text="查看"
            android:layout_marginRight="@dimen/element_margin_9"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>
    <!--我们的节目-->
    <LinearLayout
        android:id="@+id/ll_program"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/element_margin_15"
        android:visibility="visible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/img_red"
            android:gravity="center_vertical"
            android:text="我们的节目"
            android:textColor="@color/black_2a"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_more_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/element_margin_15"
            android:background="@drawable/bg_rect_side_gray"
            android:gravity="center"
            android:text="  全部 +   "
            android:textColor="@color/grey"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.ws3dm.app.view.CycleViewPager
        android:id="@+id/vp_program"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/element_margin_7"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:clipChildren="false"
        android:visibility="visible"
        />
    <!--3DM评测-->
    <LinearLayout
        android:id="@+id/ll_pince"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/element_margin_9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/img_red"
            android:gravity="center_vertical"
            android:text="3DM评测"
            android:textColor="@color/black_2a"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_more_pince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/element_margin_15"
            android:background="@drawable/bg_rect_side_gray"
            android:gravity="center"
            android:text="  全部 +   "
            android:textColor="@color/grey"
            android:textSize="12sp"/>
    </LinearLayout>

