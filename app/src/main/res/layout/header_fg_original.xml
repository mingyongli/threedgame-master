        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
