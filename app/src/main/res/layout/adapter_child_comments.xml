<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white_f8"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="测试名称"
            android:textColor="#00a0e9"
            android:layout_marginTop="@dimen/element_margin_5"
            android:textSize="14sp" />-->

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="空间法律三极管"
            android:textColor="@color/black_66"
            android:layout_marginTop="@dimen/element_margin_5"
            android:lineSpacingExtra="@dimen/element_margin_3"
            android:layout_marginBottom="@dimen/element_margin_5"
            android:layout_below="@+id/tv_name"
            android:textSize="12sp" />

       <!-- <TextView
            android:id="@+id/tv_head_title"
            android:text="业界达人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/element_margin_3"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/ic_title1"
            android:textSize="8sp"
            android:layout_toRightOf="@+id/tv_name"/>-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_time"
            android:text="2013-12-05 20:25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shallowBlack"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_locate"
            android:layout_marginLeft="@dimen/element_margin_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shallowBlack"
            android:textSize="11sp" />

        <!--<ImageView
            android:id="@+id/imgBad"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@+id/txtGood"
            android:paddingTop="2dp"
            android:src="@drawable/click_bad_grey"/>

        <TextView
            android:id="@+id/tv_num_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_margin_1"
            android:textSize="12sp"/>-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/element_margin_5"
            android:paddingLeft="@dimen/element_margin_5"
            android:text="回复"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/imgGood"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="@dimen/element_margin_5"
            android:layout_toLeftOf="@+id/txtGood"
            android:paddingTop="2dp"
            android:src="@drawable/click_good_grey"/>

        <TextView
            android:id="@+id/tv_num_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_margin_1"
            android:layout_marginRight="@dimen/element_margin_2"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_margin_0.5"
        android:layout_marginTop="3dp"
        android:background="#e2e2e2"/>
</LinearLayout>