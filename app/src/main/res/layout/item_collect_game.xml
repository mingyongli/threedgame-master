<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/element_margin_5"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.ws3dm.app.view.roundimage.RoundedImageView
                android:id="@+id/imgCover"
                android:layout_width="97dp"
                android:layout_height="125dp"
                android:layout_marginLeft="@dimen/element_margin_1"
                android:layout_marginTop="@dimen/element_margin_2"
                android:padding="@dimen/element_margin_1"
                android:scaleType="centerCrop"
                app:riv_border_color="@color/grey"
                app:riv_border_width="1dp"
                app:riv_corner_radius="5dp"
                app:riv_oval="false"
                />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/imgCover"
                android:layout_alignRight="@+id/imgCover"
                android:layout_margin="@dimen/element_margin_5"
                android:background="@drawable/bg_roundrect_fillred_light"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="italic|bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgCover"
                android:orientation="vertical"
                android:paddingBottom="@dimen/element_margin_7"
                android:paddingLeft="@dimen/element_margin_9"
                android:paddingTop="@dimen/element_margin_7">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="鬼泣5"
                    android:textColor="@color/black_2a"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_margin_13"
                    android:drawablePadding="@dimen/element_margin_9"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="类型："
                    android:textSize="12sp"/>

                <LinearLayout
                    android:id="@+id/ll_label"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginTop="@dimen/element_margin_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="平台："
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/txt_label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_roundrect_gray"
                        android:paddingBottom="@dimen/element_margin_1"
                        android:paddingLeft="@dimen/element_margin_5"
                        android:paddingRight="@dimen/element_margin_5"
                        android:paddingTop="@dimen/element_margin_1"
                        android:text="PC"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/bg_roundrect_gray"
                        android:paddingBottom="@dimen/element_margin_1"
                        android:paddingLeft="@dimen/element_margin_5"
                        android:paddingRight="@dimen/element_margin_5"
                        android:paddingTop="@dimen/element_margin_1"
                        android:text="PC"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_label3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/bg_roundrect_gray"
                        android:paddingBottom="@dimen/element_margin_1"
                        android:paddingLeft="@dimen/element_margin_5"
                        android:paddingRight="@dimen/element_margin_5"
                        android:paddingTop="@dimen/element_margin_1"
                        android:text="PC"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_label4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/bg_roundrect_gray"
                        android:paddingBottom="@dimen/element_margin_1"
                        android:paddingLeft="@dimen/element_margin_5"
                        android:paddingRight="@dimen/element_margin_5"
                        android:paddingTop="@dimen/element_margin_1"
                        android:text="PC"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_label5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/bg_roundrect_gray"
                        android:paddingBottom="@dimen/element_margin_1"
                        android:paddingTop="@dimen/element_margin_1"
                        android:text="..."
                        android:textSize="10sp"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="@dimen/element_margin_9"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="发售："
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="@dimen/element_margin_9"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="标签："
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#88ff0000"
            android:gravity="center"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_del_white"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white_e7"/>
</RelativeLayout>
