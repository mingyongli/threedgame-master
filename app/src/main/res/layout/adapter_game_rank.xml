<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_rand4"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="35dp"
            android:layout_height="125dp"
            android:gravity="center"
            android:paddingTop="@dimen/element_margin_1"
            android:text="1"
            android:textStyle="bold|italic"/>

        <!--<ImageView
            android:layout_width="97dp"
            android:layout_height="127dp"
            android:src="@drawable/bg_roundrect_white2"
            android:layout_marginLeft="@dimen/element_margin_1"
            android:layout_marginTop="@dimen/element_margin_2"
            android:layout_toRightOf="@+id/img_id"/>-->

        <com.ws3dm.app.view.roundimage.RoundedImageView
            android:id="@+id/imgCover"
            android:layout_width="95dp"
            android:layout_height="125dp"
            android:layout_marginLeft="@dimen/element_margin_2"
            android:layout_marginTop="@dimen/element_margin_2"
            android:layout_toRightOf="@+id/img_id"
            android:padding="@dimen/element_margin_1"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"
            app:riv_border_width="1dp"
            app:riv_oval="false"
            app:riv_border_color="@color/grey"
            />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/imgCover"
            android:layout_alignRight="@+id/imgCover"
            android:layout_margin="@dimen/element_margin_5"
            android:background="@drawable/bg_roundrect_fillred_light"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="italic|bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgCover"
            android:orientation="vertical"
            android:paddingBottom="@dimen/element_margin_7"
            android:paddingLeft="@dimen/element_margin_9"
            android:paddingTop="@dimen/element_margin_7">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black_2a"
                android:textSize="@dimen/text_size_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/element_margin_13"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/ic_game1"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_margin_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="动作"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="@dimen/element_margin_0.5"
                    android:src="@drawable/ic_game2"/>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_margin_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="2012-02-08"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_label"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="@dimen/element_margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginRight="@dimen/element_margin_5"
                    android:src="@drawable/ic_game3"/>

                <TextView
                    android:id="@+id/txt_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_roundrect_gray"
                    android:paddingBottom="@dimen/element_margin_1"
                    android:paddingLeft="@dimen/element_margin_5"
                    android:paddingRight="@dimen/element_margin_5"
                    android:paddingTop="@dimen/element_margin_1"
                    android:text="PC"
                    android:textSize="10sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_roundrect_gray"
                    android:paddingBottom="@dimen/element_margin_1"
                    android:paddingLeft="@dimen/element_margin_5"
                    android:paddingRight="@dimen/element_margin_5"
                    android:paddingTop="@dimen/element_margin_1"
                    android:text="PC"
                    android:textSize="10sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_roundrect_gray"
                    android:paddingBottom="@dimen/element_margin_1"
                    android:paddingLeft="@dimen/element_margin_5"
                    android:paddingRight="@dimen/element_margin_5"
                    android:paddingTop="@dimen/element_margin_1"
                    android:text="PC"
                    android:textSize="10sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_label4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_roundrect_gray"
                    android:paddingBottom="@dimen/element_margin_1"
                    android:paddingLeft="@dimen/element_margin_5"
                    android:paddingRight="@dimen/element_margin_5"
                    android:paddingTop="@dimen/element_margin_1"
                    android:text="PC"
                    android:textSize="10sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_label5"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/bg_roundrect_gray"
                    android:gravity="center"
                    android:paddingBottom="@dimen/element_margin_1"
                    android:paddingTop="@dimen/element_margin_1"
                    android:text="..."
                    android:textSize="10sp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:src="@drawable/ic_game4"/>

                <TextView
                    android:id="@+id/tv_renqi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_margin_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="125"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white_e7"/>
</LinearLayout>