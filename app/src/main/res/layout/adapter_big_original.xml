<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="2dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_top"
            android:paddingBottom="@dimen/element_margin_5"
            android:paddingLeft="@dimen/element_margin_7"
            android:paddingRight="@dimen/element_margin_7"
            android:paddingTop="@dimen/element_margin_5"
            android:textColor="@color/black_2a"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/element_margin_20"
            android:layout_height="@dimen/element_margin_20"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/element_margin_7"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/element_margin_5"
            android:layout_toRightOf="@+id/img_head"
            android:text="DQueen"/>

        <TextView
            android:id="@+id/txt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_title"
            android:layout_marginRight="@dimen/element_margin_9"
            android:paddingLeft="@dimen/element_margin_5"
            android:paddingRight="@dimen/element_margin_5"
            android:background="@drawable/bg_rect_side_blue"
            android:text="射击"
            android:textColor="@color/blue"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/txtComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginRight="4dp"
            android:padding="@dimen/element_margin_5"
            android:text="0"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/txtComment"
            android:src="@drawable/ic_news_msg"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_game"
            android:layout_alignStart="@+id/img_game"
            android:layout_below="@+id/tv_name"
            android:gravity="left"
            android:padding="@dimen/element_margin_5"
            android:layout_marginLeft="@dimen/element_margin_2"
            android:text="20:45"
            android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>