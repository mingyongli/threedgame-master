<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/loading_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_hint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/element_margin_15"
        android:text="提示"
        android:textColor="@color/shallowBlack2"
        android:textSize="@dimen/text_size_16"/>

    <EditText
        android:id="@+id/tv_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/element_margin_5"
        android:layout_margin="@dimen/element_margin_10"
        android:gravity="center_horizontal"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_margin_1"
        android:background="@color/grey_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_left_click"
            android:gravity="center"
            android:paddingBottom="@dimen/element_margin_10"
            android:paddingTop="@dimen/element_margin_10"
            android:text="@string/confirm"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/tv_separate_line"
            android:layout_width="@dimen/element_margin_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/element_margin_7"
            android:layout_marginTop="@dimen/element_margin_7"
            android:background="@color/grey_bg"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_right_click"
            android:gravity="center"
            android:paddingBottom="@dimen/element_margin_10"
            android:paddingTop="@dimen/element_margin_10"
            android:text="@string/cancel"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>

</LinearLayout>