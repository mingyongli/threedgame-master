<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/element_margin_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:text="DQueen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/black_55"
        android:layout_margin="@dimen/element_margin_7"
        android:paddingLeft="@dimen/element_margin_7"/>

    <TextView
        android:id="@+id/tv_address"
        android:text="上海市闵行区 新源路XXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/element_margin_13"
        android:lineSpacingExtra="@dimen/element_margin_5"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/element_margin_9"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/white_e7"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/element_margin_7"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/item_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_check"
            android:drawablePadding="@dimen/element_margin_5"
            android:layout_marginLeft="@dimen/element_margin_13"
            android:text="设为默认"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_14" />>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/element_margin_9"
            android:gravity="center_vertical"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"/>

        <TextView
            android:id="@+id/tv_edit"
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/element_margin_3"
            android:gravity="center_vertical"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/element_margin_7"
            android:src="@drawable/ic_del"/>

        <TextView
            android:id="@+id/tv_del"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/element_margin_3"
            android:layout_marginRight="@dimen/element_margin_9"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white_e7"/>
</LinearLayout>