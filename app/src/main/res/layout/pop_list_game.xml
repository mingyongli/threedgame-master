<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_roundrect_fillwhite"
        android:gravity="center"
        android:layout_marginLeft="@dimen/element_margin_5"
        android:layout_marginRight="@dimen/element_margin_5"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_cate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="@dimen/element_margin_9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_roundrect_gray"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/cancel"
        android:textColor="@color/blue"/>

</LinearLayout>