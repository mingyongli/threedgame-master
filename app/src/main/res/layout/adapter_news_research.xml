<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/element_margin_20"
            android:layout_height="@dimen/element_margin_20"
            android:layout_marginLeft="@dimen/element_margin_3"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/element_margin_5"
            android:layout_toRightOf="@+id/img_head"
            android:gravity="center_vertical"
            android:text="DQueen"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:45"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_12"/>

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="@dimen/element_margin_115"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/element_margin_15"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/element_margin_5"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/element_margin_5"
            android:layout_toLeftOf="@+id/img_news"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/element_margin_5"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_news"
            android:layout_toLeftOf="@+id/img_news"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/element_margin_13"
                android:background="@drawable/bg_rect_side_blue"
                android:gravity="bottom"
                android:paddingLeft="@dimen/element_margin_7"
                android:paddingRight="@dimen/element_margin_5"
                android:text="动作"
                android:textColor="@color/blue"
                android:textSize="10sp"
                android:visibility="gone"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/element_margin_1"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgComment"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/element_margin_13"
                android:src="@drawable/ic_news_msg"/>

            <TextView
                android:id="@+id/txtComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="0"
                android:textColor="#999999"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white_e7"/>

</LinearLayout>