<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/user_bg2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/steam_logined_layout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/img_steam_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/steam_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_steam_head"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF284E6E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/price_bg"
                        android:scaleType="fitXY"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <TextView
                        android:id="@+id/my_steam_game_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFA4D007"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_steam_game_price"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="游戏价值￥"
                        android:textColor="#FFACDBF5"
                        android:textSize="8sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#FFA4D007"
                    android:textSize="8sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/count_bg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:id="@+id/steam_game_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFA4D007"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/steam_game_count"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="游戏总数"
                        android:textColor="#FFACDBF5"
                        android:textSize="8sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个"
                    android:textColor="#FFA4D007"
                    android:textSize="8sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/hour_bg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:id="@+id/steam_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#FFA4D007"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/steam_time"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="游戏时长"
                        android:textColor="#FFACDBF5"
                        android:textSize="8sp" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="#FFA4D007"
                    android:textSize="8sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

