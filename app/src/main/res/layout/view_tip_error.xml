<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent_twenty_percent"
              android:orientation="vertical"
              android:gravity="center">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/element_margin_15"
        android:layout_marginRight="@dimen/element_margin_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_roundrect_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_margin_5"
                    android:text="举报标题："
                    android:textColor="@color/black_55"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14"
                    android:layout_alignBottom="@+id/tv_title"
                    android:layout_toRightOf="@+id/tv_title"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="@dimen/element_margin_5"
                android:background="@drawable/bg_roundrect_regist"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="请输入标题"
                    android:layout_marginLeft="@dimen/element_margin_5"
                    android:layout_marginRight="@dimen/element_margin_5"
                    android:textColor="?attr/txt_content"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_margin_10"
                android:text="举报链接："
                android:layout_below="@id/ll_title"
                android:textColor="@color/black_55"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_link_url"
                android:text="http://XXXXXXXXXX"
                android:layout_marginTop="@dimen/element_margin_5"
                android:textSize="@dimen/text_size_14"
                android:padding="@dimen/element_margin_5"
                android:gravity="center"
                android:layout_below="@+id/tv_link"
                android:background="@color/gray_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_margin_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报内容："
                    android:layout_below="@id/tv_link_url"
                    android:textColor="@color/black_55"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14"
                    android:layout_alignBottom="@+id/tv_content"
                    android:layout_toRightOf="@+id/tv_content"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_opinion_editor"
                android:layout_below="@+id/tv_content"
                android:layout_marginTop="5dp"
                >

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top|left"
                    android:hint="详细内容 (必填)"
                    android:maxLines="7"
                    android:padding="4dp"
                    android:textColor="@color/black_55"
                    android:background="@null"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/rg_real"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_content"
                android:paddingRight="@dimen/element_margin_5"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/rd_real"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/element_margin_30"
                    android:background="@null"
                    android:button="@null"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@drawable/selector_check"
                    android:gravity="center_vertical"
                    android:text="实名举报"
                    android:textColor="@color/white_9c"
                    android:textSize="@dimen/text_size_14" />

                <RadioButton
                    android:id="@+id/rd_noreal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@drawable/selector_check"
                    android:gravity="center_vertical"
                    android:text="匿名举报"
                    android:textColor="@color/white_9c"
                    android:textSize="@dimen/text_size_14" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_margin_10"
                android:text="预留联系方式：（如QQ，微信，邮箱）"
                android:layout_below="@id/rg_real"
                android:textColor="@color/black_55"
                android:visibility="gone"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/ll_connect"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_connect"
                android:layout_marginTop="@dimen/element_margin_5"
                android:background="@drawable/bg_roundrect_regist"
                android:visibility="gone"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etconnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/element_margin_5"
                    android:layout_marginRight="@dimen/element_margin_5"
                    android:hint="请输入联系方式："
                    android:textColor="?attr/txt_content"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_margin_10"
                android:text="3DM违法和不良信息举报联系方式"
                android:layout_below="@id/rg_real"
                android:textColor="@color/black_55"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/tv_connect"
                android:layout_marginTop="@dimen/element_margin_5"
                android:orientation="vertical">
                <TextView
                    android:text="QQ：2801467619         电话：021-54473036"
                    android:layout_marginTop="@dimen/element_margin_5"
                    android:textSize="@dimen/text_size_14"
                    android:padding="@dimen/element_margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="E-mail：lh@3dmgame.com"
                    android:layout_marginTop="@dimen/element_margin_5"
                    android:textSize="@dimen/text_size_14"
                    android:padding="@dimen/element_margin_5"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_content"
                android:layout_marginTop="@dimen/element_margin_15"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:background="@drawable/bg_roundrect_gray"
                    android:layout_marginTop="@dimen/element_margin_5"
                    android:layout_marginBottom="@dimen/element_margin_5"
                    android:textColor="@color/gray_text"
                    android:layout_marginRight="@dimen/element_margin_45"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/bg_roundrect_fillred"
                    android:text="提交"
                    android:layout_marginTop="@dimen/element_margin_5"
                    android:layout_marginBottom="@dimen/element_margin_5"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>