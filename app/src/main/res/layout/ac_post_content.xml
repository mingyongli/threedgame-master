<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_arrow_back_24" />

            <TextView
                android:id="@+id/forum"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="《上古卷轴5：天际重制版》MOD区 "
                android:textColor="#51A4FF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/forum"
                android:text="发布到"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/forum"
                android:text="版块"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/edit_tools"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/toolbar_layout"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="73dp"
                    android:layout_height="28dp"
                    android:background="@drawable/shape_button_bg"
                    android:backgroundTint="#EFEFF4"
                    android:gravity="center"
                    android:text="选择标签"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/insertImage"
                    android:layout_width="73dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_button_bg"
                    android:src="@drawable/ic_baseline_add_photo_alternate_24" />

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/post_content_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/toolbar_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_button_bg"
            android:backgroundTint="#EFEFF4"
            android:gravity="center"
            android:text="发布"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/edit_tools"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:background="@drawable/shape_bule_button"
                android:backgroundTint="@color/white"
                android:hint="添加标题" />

            <jp.wasabeef.richeditor.RichEditor
                android:layout_marginTop="10dp"
                android:id="@+id/RichEditor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/edit_title" />
        </RelativeLayout>
    </RelativeLayout>
</layout>