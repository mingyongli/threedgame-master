<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/element_margin_10">

    <View
        android:layout_width="100dp"
        android:layout_height="@dimen/element_margin_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@color/aawhite"/>

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_roundrect_gray"
        android:paddingBottom="@dimen/element_margin_2"
        android:paddingLeft="@dimen/element_margin_7"
        android:paddingRight="@dimen/element_margin_7"
        android:paddingTop="@dimen/element_margin_2"
        android:text="08-00"
        android:textColor="@color/gray_text"
        android:textSize="12sp"
        />

    <com.ws3dm.app.view.roundimage.RoundedImageView
        android:id="@+id/img_top"
        android:layout_width="90dp"
        android:layout_height="115dp"
        android:layout_below="@+id/tv_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/element_margin_5"
        android:scaleType="centerCrop"
        android:src="@drawable/load_default"
        app:riv_border_color="@color/grey"
        app:riv_border_width="1dp"
        app:riv_corner_radius="5dp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_top"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/element_margin_5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_roundrect_gray"
        android:paddingBottom="@dimen/element_margin_3"
        android:paddingLeft="@dimen/element_margin_7"
        android:paddingRight="@dimen/element_margin_7"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="@dimen/element_margin_3"
        android:text="测试中"
        android:textColor="@color/gray_text"
        android:textSize="11sp"
        />
</RelativeLayout>
