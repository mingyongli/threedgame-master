<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="@dimen/element_margin_70"
            android:layout_height="@dimen/element_margin_70"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_margin="@dimen/element_margin_1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期：2012.12.15"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="撒旦噶的个"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_margin="@dimen/element_margin_1"
                android:maxLines="1"
                android:textSize="@dimen/text_size_12"/>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/bt_download"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_roundrect_fillgreen"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:text="详情"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_e7"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>