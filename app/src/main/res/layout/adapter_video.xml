<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llVideo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="@dimen/element_margin_5"
        android:layout_marginLeft="@dimen/element_margin_7"
        android:layout_marginRight="@dimen/element_margin_7">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/element_margin_70"
                android:background="@drawable/video_shape"
                android:id="@+id/imageView"
                android:paddingTop="@dimen/element_margin_9"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            
            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/element_margin_20"
                android:layout_height="@dimen/element_margin_20"
                android:gravity="bottom"
                android:layout_marginTop="@dimen/element_margin_9"
                android:layout_marginLeft="@dimen/element_margin_7"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/img_head"
                android:layout_toRightOf="@+id/img_head"
                android:layout_marginLeft="@dimen/element_margin_5"
                android:layout_toEndOf="@+id/img_head"/>
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/element_margin_2"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:text="2015-02-05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/element_margin_10"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_msg_white"
                android:layout_marginTop="@dimen/element_margin_1"/>
            
            <TextView
                android:id="@+id/tv_num"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/element_margin_10"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/news_video" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black_2a"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>