<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.ws3dm.app.activity.BindPsnActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PSN绑定"
                android:textColor="#000000"
                android:textSize="18sp" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFEEEEEE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="PSN - ID"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/Binding_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="如何获取ID"
                android:textSize="10sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="请输入PSN ID"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#000000" />


        <CheckBox
            android:id="@+id/check_button"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:button="@drawable/ic_uncheck"
            android:gravity="center_vertical"
            android:text="     同步您的游戏账号数据到玩过，获得更多服务"
            android:textColor="#FF8E8E93"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bindPsn_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FF007AFF"
            android:gravity="center"
            android:text="绑定" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_marginTop="30dp"
            android:text="注：如果您通过官方途径修改了PSNID，则需要重新绑定新ID，才能正常使用"
            android:textColor="#FF8E8E93"
            android:textSize="12sp" />

    </LinearLayout>


</layout>