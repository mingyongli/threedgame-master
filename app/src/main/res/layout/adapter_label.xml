<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_roundrect_fillwhite"
              android:layout_margin="@dimen/element_margin_5"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/element_margin_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/element_margin_5"
        android:text="A"
        android:textStyle="bold"
        android:textColor="@color/black_2a"
        android:textSize="@dimen/text_size_16"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_margin_0.5"
        android:padding="@dimen/element_margin_7"
        android:background="@color/white_e7"
        android:layout_marginBottom="@dimen/element_margin_5"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/element_margin_5"
        android:paddingRight="@dimen/element_margin_5"
        android:background="@color/white"/>
</LinearLayout>