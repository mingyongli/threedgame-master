        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="@dimen/element_margin_15"
        android:background="@drawable/bg_panel"
        android:padding="@dimen/element_margin_7">

        <TextView
            android:id="@+id/img0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/img_game0"
            android:drawablePadding="@dimen/element_margin_4"
            android:gravity="center"
            android:textColor="@color/black_2a"
            android:text="游戏专题"
            />

        <TextView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/img_game7"
            android:drawablePadding="@dimen/element_margin_4"
            android:gravity="center"
            android:textColor="@color/black_2a"
            android:text="手游评测"
            />

        <TextView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/img_game6"
            android:drawablePadding="@dimen/element_margin_4"
            android:gravity="center"
            android:textColor="@color/black_2a"
            android:text="日常安利"
