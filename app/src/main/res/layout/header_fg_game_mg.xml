                android:layout_marginBottom="@dimen/element_margin_10"
                android:layout_below="@+id/rl_pingce2">

                <ImageView
                    android:id="@+id/pingce_head3"
                    android:layout_width="@dimen/element_margin_20"
                    android:layout_height="@dimen/element_margin_20"/>

                <TextView
                    android:id="@+id/pingce_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_margin_5"
                    android:layout_toRightOf="@+id/pingce_head3"
                    android:textColor="@color/black_2a"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/pingce_img3"
                    android:layout_below="@+id/pingce_head3"
                    android:layout_marginTop="@dimen/element_margin_2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="3dp"
                        android:paddingTop="@dimen/element_margin_3"
                        android:maxLines="2"
                        android:textColor="@color/black_2a"
                        android:textSize="@dimen/text_size_14"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/element_margin_2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_time3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="20：45"
                            android:textColor="#999999"
                            android:textSize="@dimen/text_size_12"/>

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_news_msg"/>

                        <TextView
                            android:id="@+id/txtComment3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="0"
                            android:textColor="#999999"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>

                <com.ws3dm.app.view.roundimage.RoundedImageView
                    android:id="@+id/pingce_img3"
                    android:layout_width="@dimen/element_margin_115"
                    android:layout_height="75dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
