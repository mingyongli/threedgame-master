                <TextView
                    android:id="@+id/pingce_score2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bg_score"
                    android:paddingBottom="@dimen/element_margin_5"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/white"
                    android:textStyle="italic|bold"/>

                <View
                    android:id="@+id/line_pc3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="7dp"
                    android:layout_below="@id/pingce_img2"
                    android:background="@color/white_e7"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/pingce_img2"
                    android:layout_below="@+id/pingce_head2"
                    android:layout_marginTop="@dimen/element_margin_2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="3dp"
                        android:paddingTop="@dimen/element_margin_3"
