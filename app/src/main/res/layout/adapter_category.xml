<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_margin_30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/element_margin_4"
        android:background="@color/white"
        android:paddingRight="@dimen/element_margin_4">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/img_red"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="标题"
            android:textStyle="bold|italic"
            android:layout_marginLeft="@dimen/element_margin_10"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_hot_cates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    
    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_f1"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="7dp" />
</LinearLayout>