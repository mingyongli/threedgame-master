<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/element_margin_5"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@drawable/load_default"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginTop="@dimen/element_margin_5"
        android:textColor="@color/black_55"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:text="2017-05-06"
        android:layout_marginTop="@dimen/element_margin_5"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/element_margin_5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="15dp"
            android:gravity="center_horizontal"
            android:background="@drawable/grey_score">

            <ImageView
                android:id="@+id/img_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/clip"
                android:contentDescription="@string/app_name"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/element_margin_7"
            android:maxLines="1"
            android:textStyle="italic"
            android:textColor="@color/pink"
            android:text="3.5"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>