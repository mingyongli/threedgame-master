<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llVideoAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/txtTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_margin_0.5"
        android:background="?attr/bg_line"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llVideo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:textColor="?attr/txt_title"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51分钟前"
                    android:textColor="?attr/txt_content"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPlayNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:text="129万次播放"
                    android:textColor="?attr/txt_content"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="105dp"
            android:layout_height="75dp"
            android:layout_marginLeft="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="14.5dp"
        android:background="?attr/bg_line" />

</LinearLayout>