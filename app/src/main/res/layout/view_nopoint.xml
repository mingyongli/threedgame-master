<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llUpdate"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent_twenty_percent"
              android:orientation="vertical"
              android:gravity="center"
              android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_roundrect_white"
        android:layout_margin="@dimen/element_margin_30"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/black_00"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="您的积分不足！"
                android:gravity="center"
                android:textColor="@color/black_55"
                android:textSize="@dimen/text_size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtContent"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/element_margin_5"
                android:layout_marginTop="@dimen/element_margin_5"
                android:textColor="@color/black_55"
                android:textSize="@dimen/text_size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_margin_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSubmit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_roundrect_fillred"
                android:gravity="center"
                android:text="前往积分赚取说明"
                android:layout_marginRight="@dimen/element_margin_15"
                android:layout_marginLeft="@dimen/element_margin_15"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ignore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginRight="@dimen/element_margin_35"
                android:layout_marginLeft="@dimen/element_margin_35"
                android:text="忽略"
                android:textColor="@color/white_9c"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>