<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/element_margin_5"
        android:padding="5dp">

        <com.ws3dm.app.view.roundimage.RoundedImageView
            android:id="@+id/imgCover"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:padding="@dimen/element_margin_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/element_margin_1"
            app:riv_corner_radius="5dp"
            app:riv_border_width="1dp"
            app:riv_oval="false"
            app:riv_border_color="@color/grey"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgCover"
            android:paddingBottom="@dimen/element_margin_5"
            android:paddingLeft="@dimen/element_margin_9"
            android:paddingTop="@dimen/element_margin_7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="鬼泣5"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black_2a"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/element_margin_9"
                android:layout_marginTop="@dimen/element_margin_15"
                android:ellipsize="end"
                android:text="冠军奖励："
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="比赛地点："
                android:layout_marginTop="7dp"
                android:drawablePadding="@dimen/element_margin_9"
                android:textSize="12sp"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:drawablePadding="@dimen/element_margin_9"
                android:ellipsize="end"
                android:text="比赛时间："
                android:maxLines="1"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_e7"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />
</LinearLayout>