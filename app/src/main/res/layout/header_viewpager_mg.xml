<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_top_slide"
                android:layout_width="match_parent"
                android:layout_height="160dp">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/top_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/news_shape"/>
    
    <LinearLayout
        android:id="@+id/ll_point"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignBottom="@id/top_slide"
        android:layout_centerVertical="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/point_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="标题"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        android:layout_above="@+id/ll_point"
        android:layout_marginBottom="@dimen/element_margin_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>